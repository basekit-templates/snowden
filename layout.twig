<!doctype html>
<html class="no-js" lang="{{ page.seoLang }}">

<head>
    <meta charset="utf-8" />
    <title>{{ page.title }}</title>
    <meta name="keywords" content="{{ page.keywords }}" />
    <meta name="description" content="{{ page.description }}" />

    {% if site.favicon %}
        <link rel="icon" href="{{ site.favicon['favicon'] }}" type="image/x-icon" />
        <link rel="SHORTCUT ICON" href="{{ site.favicon['thumbnail'] }}?v={{ "now"|date("U") }}" type="image/x-icon" />
    {% endif %}
    <meta name="viewport" content="width=device-width,initial-scale=1">

    {% include basekit.headScript %}
</head>
<body class="{{ page.backgroundClass }}">

        {% block content %}
        {% endblock %}

        {% include basekit.bodyScript %}

        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="{{ asset('libs/jquery-1.10.2.min.js')}}"><\/script>')</script>

        <!-- Nav Menu Script -->
        <script nonce="{{ numberUsedOnce }}">
            $( ".navigation-toggle" ).append( "<div class='bar one'></div><div class='bar two'></div><div class='bar three'></div>" );

            // Toggles class open to display/hide the whole navigation
            $( ".navigation-toggle" ).click(function() {
                $( ".extendednavigation" ).toggleClass( "open" );
            });

            // Toggles class open to display/hide folders
            $( ".navigation-item.folder" ).each(function() {
                $( this ).click(function() {
                    $( this ).toggleClass( "open" );
                });
            });
        </script>

</body>
</html>
